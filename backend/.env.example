# Database connection to Raspberry Pi
DATABASE_URL=postgresql://user:password@192.168.0.50:5432/podcasts

# MinIO S3-compatible storage on Raspberry Pi
S3_ENDPOINT=http://192.168.0.50:9000
S3_ACCESS_KEY=your-minio-access-key
S3_SECRET_KEY=your-minio-secret-key
S3_BUCKET_PODCASTS=podcasts
S3_BUCKET_COVERS=covers

# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# Server configuration
PORT=8080
NODE_ENV=development

# CORS
FRONTEND_URL=http://localhost:3000
