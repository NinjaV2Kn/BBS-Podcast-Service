# Database (optional)
# Default: SQLite (file:./dev.db)
# PostgreSQL example: postgresql://user:password@localhost:5432/podcasts
DATABASE_URL=file:./dev.db

# S3 Storage (optional)
# If not set, uses local ./uploads directory
# MinIO example: http://minio:9000
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_BUCKET_PODCASTS=podcasts
# S3_BUCKET_COVERS=covers

# JWT Security (required)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# Frontend URL (required)
FRONTEND_URL=http://localhost:3000

# Server
PORT=8080
NODE_ENV=development
